        ".git",
        ".next",
        "/docs/pages/config/contributors.json",
        "/docs/public",
        "./justfile"
    ],
    "ignoreRegExpList": [
        "users:\\s*\\[[^\\]]*\\]",
        "```[a-zA-Z0-9]*[\\s\\S]*?```"
    ]
}