{
    "version": "0.2",
    "language": "en-US",
    "dictionaryDefinitions": [
        {
            "name": "project-specific-words",
            "path": "./wordlist.txt",
            "addWords": true
        }
    ],
    "dictionaries": [
        "project-specific-words",
        "softwareTerms",
        "computing-acronyms",
        "software-tools",
        "cryptocurrencies",
        "companies"
    ],
    "allowCompoundWords": true,
